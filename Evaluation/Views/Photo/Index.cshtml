@model IEnumerable<Evaluation.Models.Photo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Fotos</h2>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>
                Id Album
            </th>
            <th>
                Id
            </th>
            <th>
                Título
            </th>
            <th>
                Imagen
            </th>
            <th>
                Acciones
            </th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AlbumId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <img src=@item.ThumbnailUrl alt=@item.Title width="32" height="32" />
                </td>
                <td class="text-center">
                    <input type="button" photoId=@item.Id class="btn btn-primary photo" value="Mostrar" />
                </td>
            </tr>
        }
    </table>

    <div class="text-center">
        <h2 id="title"></h2>
        <img id="photoimage" src=""/>
    </div>
}
else
{
    <h2>Sin datos que mostrar</h2>
}
